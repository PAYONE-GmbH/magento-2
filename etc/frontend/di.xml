        <arguments>
            <argument name="methodCodes" xsi:type="array">
                <item name="payone" xsi:type="const">Payone\Core\Model\PayoneConfig::METHOD_CREDITCARD</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="payone_config_provider" xsi:type="object">Payone\Core\Model\ConfigProvider</item>
            </argument>
        </arguments>
    </type>
</config>
